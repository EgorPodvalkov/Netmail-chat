@model StatModel

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Chat stats</title>
</head>
<body>
    <h4>
        Number of active chatrooms: 
        <span id="ChatRoomsAmount">@Model.ChatRoomsAmount</span>
    </h4>
    <h4>
        Number of sended messages: 
        <span id="ChatMessagesAmount">@Model.ChatMessagesAmount</span>
    </h4>
    <h4>
        Number of posted articles: 
        <span id="ArticlesAmount">@Model.ArticlesAmount</span>
    </h4>

    <button onclick="OnReloadButtonClick()">Reload!</button>

    <script src="~/js/Stat.js"></script>

</body>
</html>
